# Createing the screen

MDScreen:
    MDCard:
        size_hint: None, None
        size: 420, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 15
        padding: 20
        spacing: 30
        orientation: 'vertical'
        
        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_style: 'Button'
            font_size: 45
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
                

        MDTextFieldRound:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            pos_hint: {"center_x": 0.5}
            font_size: 18
            width: 200
        
        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            pos_hint: {"center_x": 0.5}
            font_size: 18
            width: 220
            password: True
        
        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}

        MDRoundFlatButton:
            text: "CREATE ACCOUNT"
            font_size: 12
            pos_hint: {"center_x": 0.5}

        Widget:
            size_hint_y: None
            height: 20
     