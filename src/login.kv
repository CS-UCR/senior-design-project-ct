# Createing the screen

MDScreen:
    name: "login"    
    MDFloatLayout:
        Image:
            source: "logo.jpg"
            size_hint: .11, .11
            pos_hint: {"center_x": .15, "center_y": .90}
            canvas.before:
                Color:
                    rgb: 1, 1, 1, 1
                Ellipse:
                    size: 115, 115
                    pos: 47, 985
                    
        MDLabel:
            id: login_label
            text: "Login"
            font_style: 'Button'
            font_size: "26sp"
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .65}
            height: self.texture_size[1]
            padding_y: 15

 
        MDTextFieldRound:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            size_hint_y: 0.055
            pos_hint: {"center_x": 0.5,  "center_y": .52}
            font_size: 28
            padding: 10
            elevation: 15
            width: 500

        
        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            size_hint_y: 0.055
            pos_hint: {"center_x": 0.5,  "center_y": .42}
            font_size: 28
            width: 500
            padding: 10
            elevation: 15
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 32
            width: 30
            size_hint_x: .50
            size_hint_y: .08
            elevation: 15
            pos_hint: {"center_x": 0.5,  "center_y": .30}

        MDLabel:
            id: forgot_password_label
            text: "Forgot Password?"
            font_size: "10sp"
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .24}
            height: self.texture_size[1]
            padding_y: 15
            color: 'green'

        MDLabel:
            id: sign_up_label
            text: "Don't have an account? Sign Up"
            font_size: "10sp"
            halign: 'center'
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .10}
            height: self.texture_size[1]
            padding_y: 15
            color: 'green'
            




        